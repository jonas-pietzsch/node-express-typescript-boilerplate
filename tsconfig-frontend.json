{
    "compilerOptions": {
        "outDir": "./lib",
        "allowJs": true,
        "target": "es5",
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "lib": [ "es7", "dom" ]
    },
    "include": [
        "./service/frontend/**/*",
        "./service/shared/**/*"
    ],
    "exclude": [
        "./service/**/*Spec.*"
    ]
}
